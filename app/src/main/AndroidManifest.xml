<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".egelixi.AllAppInfor"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HiTelInfoPeek">
        <activity
            android:name=".GuidePeek"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <data
                    android:host="com.endless.boundaries"
                    android:scheme="com.endless.boundaries" />
            </intent-filter>
        </activity>
        <activity-alias
            android:name="com.endless.boundaries.PeekFo"
            android:enabled="@string/bbvsdmk"
            android:exported="true"
            android:targetActivity=".GuidePeek">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity
            android:name=".egelixi.Sdiudengt"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.INFO" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfoPeek"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OutAppPeek"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeviceInfoPeek"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>